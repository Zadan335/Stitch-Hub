<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background -->
            <corners android:radius="100dp"/> <!-- Circular effect -->
            <gradient
                android:startColor="#00000000"
                android:endColor="#40000000"
            android:angle="45"/>
        </shape>
    </item>

    <!-- Main background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1C1C1C"/> <!-- Dark gray background color -->
            <corners android:radius="100dp"/> <!-- Circular effect -->
            <stroke android:width="1dp" android:color="#B08D57"/> <!-- Softer border color -->
        </shape>
    </item>

    <!-- Gradient overlay layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/> <!-- Circular effect -->
            <gradient
                android:startColor="#B08D57"
            android:endColor="#F6E8D4"
            android:angle="45"/>
        </shape>
    </item>



    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/> <!-- Circular effect -->
            <gradient
                android:startColor="#B08D57"
            android:endColor="#F6E8D4"
            android:angle="45"/>
        </shape>
    </item>

</layer-list>