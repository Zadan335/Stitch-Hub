<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@drawable/ba"
    tools:context=".cust_or_tailor">

    <!-- Container for the centered content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Circle containing the Lottie Animation -->
        <FrameLayout
            android:layout_width="251dp"
            android:layout_height="475dp"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"> <!-- Add margin to move it down -->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="172dp"
                android:layout_height="154dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/ani" />
        </FrameLayout>

        <!-- Customer Button -->
        <Button
            android:id="@+id/button_customer"
            android:layout_width="213dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            style="@style/CustomButton"
            android:text="Customer"
            android:textColor="#E48C0E" />

        <!-- Tailor Button -->
        <Button
            android:id="@+id/button_tailor"
            android:layout_width="214dp"
            android:layout_height="63dp"
            android:layout_marginBottom="32dp"
            style="@style/CustomButton"
            android:text="Tailor"
            android:textColor="#E48C0E" />

    </LinearLayout>

</FrameLayout>