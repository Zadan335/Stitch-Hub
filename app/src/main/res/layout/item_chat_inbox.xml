<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
android:background="@drawable/orbackground"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Profile Image with rounded corners -->
        <ImageView
            android:id="@+id/senderProfilePic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/user"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_image"
        android:padding="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Sender's Email -->
            <TextView
                android:id="@+id/senderEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender's Email"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <!-- Last Message -->
            <TextView
                android:id="@+id/lastmess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last message preview goes here"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>